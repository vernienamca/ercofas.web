@{
    ViewData["Title"] = "Roles";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Roles</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard_1", "Dashboards")">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                User Management
            </li>
            <li class="active breadcrumb-item">
                <strong>Roles</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2"></div>
</div>
<div id="role-list" class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>
                        List of Roles 
                        <span class="count label label-info float-right">0</span>
                    </h5>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                         <div class="form-group has-success row">
                            <div class="col-sm-2">
                                 <button onclick="location.href='@Url.Action("AddRole", "UserManagement")'" type="button" class="btn btn-info">
                                     <i class="fa fa-plus"></i> Add
                                 </button>
                            </div>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <input id="search-role-text" type="text" class="form-control" placeholder="Search roles here..."> 
                                    <span class="input-group-append"> 
                                        <button id="search-role-button" type="button" class="btn btn-info">Search</button> 
                                    </span>
                                </div>
                           </div>
                        </div>
                        <div class="alert alert-success alert-dismissable">
                            <button data-type="success" aria-hidden="true" class="close" type="button">×</button>
                            <strong>Success!</strong> Role has been successfully deleted.
                        </div>
                        <div class="alert alert-danger alert-dismissable">
                            <button data-type="danger" aria-hidden="true" class="close" type="button">×</button>
                            <strong>Error!</strong> Unable to delete role, it's being used by another process.
                        </div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Role Name</th>
                                    <th>Description</th>
                                    <th>Created By</th>
                                    <th>Date Created</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="table-data">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <environment names="Development">
        <script type="text/javascript" src="~/js/role.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script type="text/javascript" src="~/js/role.js"></script>
    </environment>
}
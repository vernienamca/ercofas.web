@{
    ViewData["Title"] = "Hearings/Schedule";
}
<link href="~/lib/bootstrap-datepicker/datepicker3.css" rel="stylesheet" />
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Hearing/Schedule</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard_1", "Dashboards")">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                Hearings
            </li>
            <li class="active breadcrumb-item">
                <strong>Schedule</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2"></div>
</div>
<div id="hearing-content" class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">            
            <div class="ibox ">
                <div class="ibox-title">
                    <br />
                    <h1 style="color: blue; text-align: center;">
                        Hearing Schedule
                    </h1>
                    <br />
                </div>
                <div class="ibox-content">
                    <div class="panel-body">                        
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="alert alert-success alert-dismissable">
                                    <button data-type="success" aria-hidden="true" class="close" type="button">×</button>
                                    <strong>Success!</strong> Your have been successfully scheduled a virtual hearing.
                                </div>
                                <div class="alert alert-danger alert-dismissable">
                                    <button data-type="danger" aria-hidden="true" class="close" type="button">×</button>
                                    <strong>Error!</strong> <span class="danger-text"></span>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <input type="hidden" class="hearing-id" />
                                        <div class="form-group">
                                            <label>Date of Hearing <span class="text-danger font-bold">*</span></label>
                                            <div class="input-group date" data-provide="datepicker">
                                                <input type="text" class="form-control schedule-date">
                                                <div class="input-group-addon">
                                                    <span class="glyphicon glyphicon-th"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Type of Hearing <span class="text-danger font-bold">*</span></label>
                                            <select class="form-control m-b hearing-type-select" name="hearing-type" disabled>
                                                <option value=""></option>
                                                <option value="1">Initial hearing</option>
                                                <option value="2">Written order</option>
                                                <option value="3">Open court</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row row-schedule">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label>Meeting Link <span class="text-danger font-bold">*</span></label>
                                            <input type="text" class="form-control meeting-link-text">
                                        </div>
                                    </div>                                    
                                </div>
                                <div class="row row-schedule">
                                    <div class="col-lg-12">
                                        <div class="form-group hide">
                                            <label>Description </label>
                                            <textarea rows="2" cols="50" class="form-control description-text"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>                            
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-info btn-md schedule-hearing" type="submit">
                                    <i class="fa fa-send-o"></i> Schedule
                                </button>                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>         
        </div>
    </div>
</div>

@section Scripts {
    <environment names="Development">
        <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.js"></script>
        <script type="text/javascript" src="~/js/hearing-schedule.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.js"></script>
        <script type="text/javascript" src="~/js/hearing-schedule.js"></script>
    </environment>
}
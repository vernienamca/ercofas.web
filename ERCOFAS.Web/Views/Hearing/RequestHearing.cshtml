@{
    ViewData["Title"] = "Hearings/Request";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Hearing/Schedule</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard_1", "Dashboards")">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                Hearings
            </li>
            <li class="active breadcrumb-item">
                <strong>Request</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2"></div>
</div>
<div id="hearing-content" class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <br />
                    <h1 style="color: blue; text-align: center;">
                        Schedule of Hearings
                    </h1>
                    <br />
                </div>
                <div class="ibox-content">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="alert alert-success alert-dismissable">
                                    <button data-type="success" aria-hidden="true" class="close" type="button">×</button>
                                    <strong>Success!</strong> Your have been successfully sent request a virtual hearing.
                                </div>
                                <div class="alert alert-danger alert-dismissable">
                                    <button data-type="danger" aria-hidden="true" class="close" type="button">×</button>
                                    <strong>Error!</strong> <span class="danger-text"></span>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Type of Hearing <span class="text-danger font-bold">*</span></label>
                                            <select class="form-control m-b hearing-type-select" name="hearing-type">
                                                <option value=""></option>
                                                <option value="1">Initial hearing</option>
                                                <option value="2">Written order</option>
                                                <option value="3">Open court</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label>Description </label>
                                            <textarea rows="2" cols="50" class="form-control description-text"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-success btn-md send-request" type="submit">
                                    <i class="fa fa-send-o"></i> Send Request
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <environment names="Development">
        <script type="text/javascript" src="~/js/hearing.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script type="text/javascript" src="~/js/hearing.js"></script>
    </environment>
}
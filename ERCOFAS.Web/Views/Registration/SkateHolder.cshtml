@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ERC-OFAS - Skateholder Registration Form</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script src="https://www.google.com/recaptcha/api.js"></script>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>
</head>
<body class="gray-bg">
    <div id="registration-wrapper" class="loginColumns animated fadeInDown">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Skateholder Registration Form <small>(ERC Request for Email Registration (RER))</small></h5>
                    </div>
                    <div class="ibox-content">
                        <div class="theme-experttipimportant mntl-sc-block money-sc-block-callout mntl-sc-block-callout mntl-block" data-tracking-id="mntl-sc-block-callout" data-tracking-container="true">
                            <h3>Note</h3>
                            <div class="mntl-sc-block-callout-body mntl-text-block">
                                <ul>
                                    <li>Please make sure all information below are correct.</li>
                                    <li>All fields marked with asterisks ( <span class="text-danger font-bold">*</span> ) are required.</li>
                                </ul>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <h3>Step 1 - Type of RER <span class="text-danger font-bold">*</span></h3>
                                <div class="form-group">
                                    <div>
                                        <label>
                                            <input type="radio" checked="" value="option1" id="optionsRadios1" name="optionsRadios"> Individual (<i>Consumers</i>)
                                        </label>
                                    </div>
                                    <div>
                                        <label>
                                            <input type="radio" value="option2" id="optionsRadios2" name="optionsRadios"> Juridical Entity (<i>DU, TransCo, GenCo, RES, QTP, Counsel, Gov't Agency</i>)
                                        </label>
                                    </div>
                                </div>
                                <hr />
                                <h3>Step 2 - Individual Person Form</h3>
                                <p>For application representing companies and organizations.</p>
                                <div class="form-group">
                                    <label>Full Name <span class="text-danger font-bold">*</span></label>
                                    <input type="email" class="form-control" placeholder="Juan de la Cruz" required="">
                                </div>
                                <div class="form-group">
                                    <label>Email Address <span class="text-danger font-bold">*</span></label>
                                    <input type="email" class="form-control" placeholder="name@gmail.com" required="">
                                    <small class="form-text m-b-none"><i>Please make sure that you input is correct.</i></small>
                                </div>
                                <div class="form-group">
                                    <label>Mobile Number <span class="text-danger font-bold">*</span></label>
                                    <input type="email" class="form-control" placeholder="09064931231" required="">
                                    <small class="form-text m-b-none"><i>The value must be a number.</i></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h3>Step 3 - Upload Requirements <span class="text-danger font-bold">*</span></h3>
                                <p>Please complete the required document(s) below:</p>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Upload File</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Scanned Copy of Certification or Authorization of your Company</td>
                                                <td class="text-center">
                                                    <input type="file" id="myFile" name="filename">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Company or Goverment Issued Identification Cards (IDs)</td>
                                                <td class="text-center">
                                                    <input type="file" id="myFile" name="filename">
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <label> 
                            <input type="checkbox" value=""> I understand and agree with the 
                            <a href="#"><u>Terms & Conditions</u></a> and 
                            <a href="#"><u>Privacy Policy</u></a>.
                        </label>
                        <p>Registration confirmation will be emailed to you.</p>
                        <hr />
                        <button type="submit" class="btn btn-info btn-lg"  onclick="location.href='@Url.Action("Dashboard_1", "Dashboards")'">Register</button>
                        <button type="submit" class="btn btn-default btn-lg"  onclick="location.href='@Url.Action("Login", "Pages")'">Cancel</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ERC-OFAS - Skateholder Registration Form</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/js/registration.js"></script> 
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>
</head>
<body class="gray-bg">

    <div id="registration-content" class="loginColumns animated fadeInDown">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Skateholder Registration Form <small>(ERC Request for Email Registration (RER))</small></h5>
                    </div>
                    <div class="ibox-content">
                        <div class="theme-experttipimportant mntl-sc-block money-sc-block-callout mntl-sc-block-callout mntl-block" data-tracking-id="mntl-sc-block-callout" data-tracking-container="true">
                            <h3><i class="fa fa-pencil"></i> Note</h3>
                            <div class="mntl-sc-block-callout-body mntl-text-block">
                                <ul>
                                    <li>
                                        <mark><i>Please make sure all information below are correct.</i></mark>
                                    </li>
                                    <li>
                                        <mark><i>All fields with red asterisk ( <span class="text-danger font-bold">*</span> ) are required to fill.</i></mark>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <h3>
                                    <i class="fa fa-flickr"></i> 
                                    Step 1 - Type of RER <span class="text-danger font-bold">*</span>
                                </h3>
                                <div class="form-group">
                                    <div>
                                        <label>
                                            <input type="radio" class="individual-radio" checked="checked" value="option1" name="rer-types"> 
                                            Individual (<i>Consumers</i>)
                                        </label>
                                    </div>
                                    <div>
                                        <label>
                                            <input type="radio" class="juridical-radio" value="option2" id="optionsRadios2" name="rer-types"> 
                                            Juridical Entity (<i>DU, TransCo, GenCo, RES, QTP, Counsel, Gov't Agency</i>)
                                        </label>
                                    </div>
                                </div>
                                <hr />
                                <div class="individual">
                                    <h3>
                                        <i class="fa fa-vcard" aria-hidden="true"></i> 
                                        Step 2 - Individual Person Form
                                    </h3>
                                    <div class="theme-experttipimportant mntl-sc-block money-sc-block-callout mntl-sc-block-callout mntl-block" data-tracking-id="mntl-sc-block-callout" data-tracking-container="true">
                                        <h4>Natural Persons Requirements:</h4>
                                        <div class="mntl-sc-block-callout-body mntl-text-block">
                                            <p>The RER must be accompanied by a Certification or Authorization containing the following:</p>
                                            <ul>
                                                <li>
                                                    <mark><i>(1) Email Address;</i></mark>
                                                </li>
                                                <li>
                                                    <mark><i>(2) Mobile number/s that the ERC’s personnel can contact during working hours;</i></mark>
                                                </li>
                                                <li>
                                                    <mark><i>(3) Copies of the company-issued identification cards (IDs) and/or government-issued IDs;</i></mark>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <p class="font-italic">For application representing companies and organizations.</p>
                                    <div class="form-group">
                                        <label>Full Name <span class="text-danger font-bold">*</span></label>
                                        <input type="email" class="form-control" placeholder="Enter your answer" required="">
                                    </div>
                                    <div class="form-group">
                                        <label>Email Address <span class="text-danger font-bold">*</span></label>
                                        <input type="email" class="form-control" placeholder="Enter your answer" required="">
                                        <small class="form-text m-b-none font-italic"><mark>Please make sure that you input is correct</mark></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Mobile Number <span class="text-danger font-bold">*</span></label>
                                        <input type="email" class="form-control" placeholder="Enter your answer" required="">
                                        <small class="form-text m-b-none font-italic"><mark>The value must be a number</mark></small>
                                    </div>
                                </div>
                                <div class="juridical">
                                    <h3>
                                        <i class="fa fa-tasks"></i> 
                                        Step 2 - Classification of RER <span class="text-danger font-bold">*</span>
                                    </h3>
                                    <div class="form-group rer-classification"></div>
                                    <hr />
                                </div>
                                <div class="juridical-form">
                                    <h3>
                                        <i class="fa fa-vcard" aria-hidden="true"></i> 
                                        Step 3 - Juridical Entity Form
                                    </h3>
                                    <div class="theme-experttipimportant mntl-sc-block money-sc-block-callout mntl-sc-block-callout mntl-block" data-tracking-id="mntl-sc-block-callout" data-tracking-container="true">
                                        <h4>Juridical Entity Requirements:</h4>
                                        <div class="mntl-sc-block-callout-body mntl-text-block">
                                            <p>The RER must be accompanied by a Certification or Authorization containing the following:</p>
                                            <ul>
                                                <li>
                                                    <mark><i>(1) Designated e-mail address to be used;</i></mark>
                                                </li>
                                                <li>
                                                    <mark><i>(2) Two (2) designated mobile numbers that the ERC’s personnel can contact during working hours;</i></mark>
                                                </li>
                                                <li>
                                                    <mark><i>(3) The names of the two (2) dedicated liaison officers that will be authorized to manage and operate the designated mobile number and e-mail address.</i></mark>
                                                </li>
                                                <li>
                                                    <mark><i>(4) Copies of the company-issued identification cards (IDs) and/or government-issued IDs of the liaison officers who will handle the designated mobile numbers.</i></mark>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                   
                                    <div class="form-group">
                                        <label>Name of Company/Organization/Office <span class="text-danger font-bold">*</span></label>
                                        <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                    </div>
                                    <div class="form-group">
                                        <label>Office Address <span class="text-danger font-bold">*</span></label>
                                        <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                    </div>
                                    <div class="form-group">
                                        <label>Office Telephone Number (<i>if applicable</i>)</label>
                                        <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                    </div>
                                    <div class="form-group">
                                        <label>Designated Email Address no. 1 <span class="text-danger font-bold">*</span></label>
                                        <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                        <small class="form-text m-b-none font-italic"><mark>Kindly input one (1) email address only</mark></small>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Designated Email Address no. 2 </label>
                                                <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                                <small class="form-text m-b-none font-italic"><strong>Optional</strong> - Kindly input one (1) email address only</small>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Designated Email Address no. 3 </label>
                                                <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                                <small class="form-text m-b-none font-italic"><strong>Optional</strong> - Kindly input one (1) email address only</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Designated Email Address no. 4 </label>
                                                <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                                <small class="form-text m-b-none font-italic"><strong>Optional</strong> - Kindly input one (1) email address only</small>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                               <label>Designated Email Address no. 5</label>
                                                <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                                <small class="form-text m-b-none font-italic"><strong>Optional</strong> - Kindly input one (1) email address only</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="juridical-form">
                                    <div class="form-group">
                                        <label>Designated Mobile Number 1 <span class="text-danger font-bold">*</span></label>
                                        <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                        <small class="form-text m-b-none font-italic"><mark>First (1st) Designated Mobile Number that the ERC's personnel can contact during working hours</mark></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Designated Mobile Number 2 <span class="text-danger font-bold">*</span></label>
                                        <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                        <small class="form-text m-b-none font-italic"><mark>Second (2nd) Designated Mobile Number that the ERC's personnel can contact during working hours</mark></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Dedicated Liaison Officer No. 1 <span class="text-danger font-bold">*</span></label>
                                        <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                        <small class="form-text m-b-none font-italic">
                                            <mark>The name of the Dedicated Liaison Officer that will be authorized to manage and operate the designated email address 
                                            and mobile number pursuant to Rule III Section II: Registration Process of the Guidelines Governing Electronic Applications, Filings, and Virtual Hearings Before the 
                                            Energy Regulatory Commission</mark>
                                        </small>
                                    </div>
                                    <div class="form-group">
                                        <label>Dedicated Liaison Officer No. 2 <span class="text-danger font-bold">*</span></label>
                                        <input type="text" class="form-control" placeholder="Enter your answer" required="">
                                        <small class="form-text m-b-none font-italic">
                                            <mark>The name of the Dedicated Liaison Officer that will be authorized to manage and operate the designated email address 
                                            and mobile number pursuant to Rule III Section II: Registration Process of the Guidelines Governing Electronic Applications, Filings, and Virtual Hearings Before the 
                                            Energy Regulatory Commission</mark>
                                        </small>
                                    </div>
                                    <hr />
                                </div>
                                <h3>
                                    <i class="fa fa-briefcase"></i> 
                                    Step 3 - Upload Requirements <span class="text-danger font-bold">*</span>
                                </h3>
                                <p>Please complete the required document(s) below:</p>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>Name</th>
                                                <th>Upload File</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Scanned Copy of Certification or Authorization of your Company</td>
                                                <td class="text-center">
                                                    <input type="file" id="myFile" name="filename">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Company or Goverment Issued Identification Cards (IDs)</td>
                                                <td class="text-center">
                                                    <input type="file" id="myFile" name="filename">
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <br />
                                <label> 
                                    <input type="checkbox" value=""> I understand and agree with the 
                                    <a href="#" class="font-bold text-primary"><u>Terms & Conditions</u></a> and 
                                    <a href="#" class="font-bold text-primary"><u>Privacy Policy</u></a>.
                                </label>
                                <p>Registration confirmation will be emailed to you.</p>
                                <hr />
                                <button type="submit" class="btn btn-info btn-lg" onclick="location.href='@Url.Action("Dashboard_1", "Dashboards")'">
                                    <i class="fa fa-edit"></i> Register
                                </button>
                                <button type="submit" class="btn btn-default btn-lg"  onclick="location.href='@Url.Action("Login", "Pages")'">
                                    <i class="fa fa-times"></i> Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>